@page "/recovery-password"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components
@layout Components.Layout.CustomLayout
@attribute [AllowAnonymous]

@inject IJSRuntime JS
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@implements IAsyncDisposable

<div class="authentication-background">
    <div class="auth-bg-wrapper">
        <div class="authentication-basic-background">
            <img src="../assets/images/media/backgrounds/9.png" alt="">
        </div>

        <div id="login-bg"></div>

        <div class="auth-center">
            <div class="card custom-card auth-card-wide border-0 shadow-sm">
                <div class="card-body p-sm-5 p-4">
                    <div class="mb-4">
                        <a href="/index">
                            <img src="../assets/images/brand-logos/toggle-logo.png" alt="logo" class="desktop-dark auth-logo">
                        </a>
                    </div>

                    <div class="mb-3">
                        <h4 class="fw-semibold mb-1">Recuperación de contraseña</h4>
                        <p class="text-muted fw-normal mb-0">Ingresa tu correo y te enviaremos un enlace para restablecer tu contraseña.</p>
                    </div>

                    <EditForm Model="model" OnValidSubmit="EnviarCorreo">
                        <DataAnnotationsValidator />
                        <div class="row gy-3">
                            <div class="col-xl-12">
                                <label for="recovery-email" class="form-label text-default">Correo electrónico</label>
                                <InputText @bind-Value="model.Email" class="form-control" id="recovery-email" placeholder="correo@dominio.com" maxlength="150" />
                                <ValidationMessage For="@(() => model.Email)" />
                            </div>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary" disabled="@_enviando">
                                @if (_enviando)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Enviando...</span>
                                }
                                else
                                {
                                    <span>Enviar enlace</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <div class="mt-3 text-center">
                        <a class="fw-medium" href="/index">Volver al inicio de sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordRequest model = new() { Email = "" };
    private bool _enviando;
    private bool _particlesMounted;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _particlesMounted) return;
        try
        {
            var ready = await JS.InvokeAsync<bool>("eval", "typeof window.particleFunctions?.mountParticlesBG === 'function'");
            if (ready)
            {
                await JS.InvokeVoidAsync("particleFunctions.mountParticlesBG", "login-bg");
                _particlesMounted = true;
            }
        }
        catch { }
    }

    private async Task EnviarCorreo()
    {
        _enviando = true;
        StateHasChanged();

        try
        {
            var isDark = await JS.InvokeAsync<bool>("isAppInDarkMode");
            var ok = await AuthService.SendPasswordResetEmailAsync(model.Email);

            if (ok)
            {
                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    toast = true,
                    position = "top-end",
                    icon = "success",
                    title = "¡Correo enviado!",
                    html = "<small>Si el correo existe, te hemos enviado un enlace para restablecer tu contraseña.</small>",
                    showConfirmButton = false,
                    timer = 4000,
                    timerProgressBar = true,
                    background = isDark ? "#1e1e1e" : null,
                    color = isDark ? "#e6e6e6" : null
                });

                model.Email = "";
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    toast = true,
                    position = "top-end",
                    icon = "error",
                    title = "Error al procesar",
                    html = "<small>No se pudo procesar la solicitud. Intenta nuevamente.</small>",
                    showConfirmButton = false,
                    timer = 3000,
                    timerProgressBar = true,
                    background = isDark ? "#1e1e1e" : null,
                    color = isDark ? "#e6e6e6" : null
                });
            }
        }
        catch (Exception ex)
        {
            var isDark = await JS.InvokeAsync<bool>("isAppInDarkMode");
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                toast = true,
                position = "top-end",
                icon = "error",
                title = "Error de conexión",
                html = "<small>No se pudo conectar con el servidor.</small>",
                showConfirmButton = false,
                timer = 3000,
                timerProgressBar = true,
                background = isDark ? "#1e1e1e" : null,
                color = isDark ? "#e6e6e6" : null
            });
        }
        finally
        {
            _enviando = false;
            StateHasChanged();
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (!_particlesMounted) return;
        try
        {
            await JS.InvokeVoidAsync("window.particleFunctions.unmountParticlesBG", "login-bg");
        }
        catch { }
    }
}