@page "/dashboards/productos"
@using Microsoft.AspNetCore.Authorization
@using sistemaFacturacion.Models
@using sistemaFacturacion.Services
@using CurrieTechnologies.Razor.SweetAlert2
@using ApexCharts
@inject IProductosApiClient ProductosApi
@inject SweetAlertService Swal
@inject IJSRuntime JS
@inject NavigationManager Nav
@attribute [Authorize]

<div class="productos-dashboard">

    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
        <div>
            <h1 class="page-title fw-semibold fs-20 mb-0">Gestión de Productos</h1>
            <div class="text-muted fs-13">Panel general · accesos rápidos y actividad reciente</div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary" @onclick="@(() => Nav.NavigateTo("/dashboards/productos/crear"))">
                <i class="ri-add-line me-1"></i> Crear producto
            </button>
            <button class="btn btn-light" @onclick="Recargar">
                <i class="ri-refresh-line me-1"></i> Recargar
            </button>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-sm-6 col-xl-3 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Total productos</div>
                    <div class="fs-3 fw-semibold">@KpiTotal</div>
                    <div class="fs-12 @(KpiDeltaTotal >= 0 ? "text-success" : "text-danger")">
                        @(KpiDeltaTotal >= 0 ? "▲" : "▼") @KpiDeltaTotal.ToString("+#0.0;-#0.0")% vs mes anterior
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Activos</div>
                    <div class="fs-3 fw-semibold">@KpiActivos</div>
                    <div class="text-success fs-12">+@KpiNuevos este mes</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Inactivos</div>
                    <div class="fs-3 fw-semibold">@KpiInactivos</div>
                    <div class="text-secondary fs-12">Sin variación</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Tipos distintos</div>
                    <div class="fs-3 fw-semibold">@TiposDistintos</div>
                    <div class="text-muted fs-12">Agrupado por "Tipo"</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-lg-5 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-transparent"><h6 class="mb-0">Estado de productos</h6></div>
                <div class="card-body">
                    <ApexChart TItem="EstadoProductoChartItem"
                               Title="Activos vs Inactivos"
                               Options="DonutOptions"
                               @ref="DonutChart">
                        <ApexPointSeries TItem="EstadoProductoChartItem"
                                         Items="DonutData"
                                         Name="Productos"
                                         SeriesType="SeriesType.Donut"
                                         XValue="e => e.Estado"
                                         YValue="e => e.Cantidad" />
                    </ApexChart>
                </div>
            </div>
        </div>

        <div class="col-lg-7 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-transparent"><h6 class="mb-0">Productos por Tipo (Top 8)</h6></div>
                <div class="card-body">
                    <ApexChart TItem="BarItem"
                               Title="Por tipo"
                               Options="BarOptions"
                               @ref="BarChart">
                        <ApexPointSeries TItem="BarItem"
                                         Items="BarData"
                                         Name="Productos"
                                         SeriesType="SeriesType.Bar"
                                         XValue="e => e.Label"
                                         YValue="e => e.Value" />
                    </ApexChart>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-lg-6 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0">Alertas de catálogo</h6>
                </div>
                <div class="card-body d-grid gap-2">
                    @if (productos.Count == 0)
                    {
                        <div class="text-muted">No hay datos para evaluar alertas.</div>
                    }
                    else
                    {
                        <div class="alert alert-warning d-flex align-items-start gap-2">
                            <i class="ri-error-warning-line fs-5"></i>
                            <div>
                                <strong>@InactivosSinTipo.Count()</strong> inactivos con Tipo vacío o "(sin tipo)".
                                <div class="small text-muted">Mejora la calidad del catálogo.</div>
                            </div>
                        </div>
                        <div class="alert alert-info d-flex align-items-start gap-2">
                            <i class="ri-information-line fs-5"></i>
                            <div>
                                <strong>@NombresCortos.Count()</strong> productos con nombre muy corto (&lt; 4).
                                <div class="small text-muted">Facilita la búsqueda y comprensión.</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-12">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0">Actividad reciente</h6>
                </div>
                <div class="card-body">
                    @if (Ultimos.Count == 0)
                    {
                        <div class="text-muted">Sin registros recientes.</div>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var p in Ultimos)
                            {
                                <li class="d-flex align-items-center justify-content-between border-bottom py-2">
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="ri-price-tag-3-line text-primary"></i>
                                        <div>
                                            <div class="fw-medium kpi-number">@p.Nombre</div>
                                            <small class="text-muted">@p.Tipo • ID: @p.Id</small>
                                        </div>
                                    </div>
                                    <div>
                                        <span class="badge @(p.Estado ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                            @(p.Estado ? "Activo" : "Inactivo")
                                        </span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header d-flex align-items-center justify-content-between bg-transparent">
            <h6 class="mb-0">Últimos productos añadidos</h6>
            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => Nav.NavigateTo("/dashboards/productos/listar"))">
                Ver listado completo
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="mb-0 table align-middle">
                    <thead class="text-muted">
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Tipo</th>
                            <th scope="col">Estado</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (cargando)
                        {
                            <tr>
                                <td colspan="4" class="text-muted py-4 text-center">
                                    <span class="spinner-border spinner-border-sm me-2"></span>Cargando...
                                </td>
                            </tr>
                        }
                        else if (Ultimos.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-muted py-4 text-center">
                                    <i class="ri-inbox-line fs-3 d-block mb-2"></i>Sin registros
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var p in Ultimos)
                            {
                                <tr>
                                    <td>@p.Nombre</td>
                                    <td>@p.Tipo</td>
                                    <td>
                                        <span class="badge @(p.Estado ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                            @(p.Estado ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary"
                                                @onclick="@(() => Nav.NavigateTo($"/dashboards/productos/editar/{p.Id}"))"
                                                title="Editar">
                                            <i class="ri-edit-line"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@code {
    private record BarItem(string Label, int Value);

    private sealed class EstadoProductoChartItem
    {
        public string Estado { get; set; } = string.Empty;
        public int Cantidad { get; set; }
    }

    private List<ProductoDto> productos = new();
    private bool cargando = true;

    private int KpiTotal;
    private int KpiActivos;
    private int KpiInactivos;
    private int TiposDistintos;
    private int KpiNuevos;
    private double KpiDeltaTotal;

    private ApexChart<EstadoProductoChartItem> DonutChart;
    private List<EstadoProductoChartItem> DonutData = new();
    private ApexChartOptions<EstadoProductoChartItem> DonutOptions = new()
    {
        Chart = new Chart { Type = ChartType.Donut },
        Legend = new Legend { Position = LegendPosition.Bottom }
    };

    private ApexChart<BarItem> BarChart;
    private List<BarItem> BarData = new();
    private ApexChartOptions<BarItem> BarOptions = new()
    {
        PlotOptions = new PlotOptions
        {
            Bar = new PlotOptionsBar
            {
                Horizontal = false,
                ColumnWidth = "55%"
            }
        },
        DataLabels = new DataLabels { Enabled = false },
        Legend = new Legend { Position = LegendPosition.Top }
    };

    private IEnumerable<ProductoDto> InactivosSinTipo =>
        productos.Where(p => !p.Estado && string.IsNullOrWhiteSpace(p.Tipo));

    private IEnumerable<ProductoDto> NombresCortos =>
        productos.Where(p => (p.Nombre ?? string.Empty).Trim().Length < 4);

    private List<ProductoDto> Ultimos = new();

    protected override async Task OnInitializedAsync() => await Cargar();

    private async Task Recargar() => await Cargar(true);

    private async Task Cargar(bool toast = false)
    {
        try
        {
            cargando = true;
            productos = await ProductosApi.GetAllAsync();

            KpiTotal = productos.Count;
            KpiActivos = productos.Count(p => p.Estado);
            KpiInactivos = KpiTotal - KpiActivos;
            TiposDistintos = productos
                .Select(p => (p.Tipo ?? string.Empty).Trim())
                .Where(s => !string.IsNullOrWhiteSpace(s))
                .Distinct(StringComparer.OrdinalIgnoreCase)
                .Count();
            KpiNuevos = Math.Min(5, productos.Count);
            KpiDeltaTotal = 4.8;

            DonutData = new List<EstadoProductoChartItem>
            {
                new EstadoProductoChartItem
                {
                    Estado = "Activos",
                    Cantidad = KpiActivos
                },
                new EstadoProductoChartItem
                {
                    Estado = "Inactivos",
                    Cantidad = KpiInactivos
                }
            };

            var porTipo = productos
                .GroupBy(p => (p.Tipo ?? "(sin tipo)").Trim(), StringComparer.OrdinalIgnoreCase)
                .Select(g => new BarItem(g.Key, g.Count()))
                .OrderByDescending(x => x.Value)
                .ToList();

            if (porTipo.Count > 9)
            {
                var top8 = porTipo.Take(8).ToList();
                var otros = porTipo.Skip(8).Sum(x => x.Value);
                top8.Add(new BarItem("Otros", otros));
                BarData = top8;
            }
            else
            {
                BarData = porTipo;
            }

            Ultimos = productos
                .OrderByDescending(p => p.Id)
                .Take(8)
                .ToList();

            if (toast)
            {
                var isDark = await JS.InvokeAsync<bool>("isAppInDarkMode");
                await Swal.FireAsync(new SweetAlertOptions
                {
                    Toast = true,
                    Position = SweetAlertPosition.TopEnd,
                    Icon = SweetAlertIcon.Success,
                    Title = $"Datos actualizados ({KpiTotal})",
                    ShowConfirmButton = false,
                    Timer = 1200,
                    Background = isDark ? "#1e1e1e" : null,
                    Color = isDark ? "#e6e6e6" : null
                });
            }
        }
        catch (HttpRequestException ex)
        {
            await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Error al cargar",
                Html = $"<small>{ex.Message}</small>",
                Icon = SweetAlertIcon.Error
            });
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }
}
