@page "/dashboards/lotes/listar"
@using Microsoft.AspNetCore.Authorization
@using sistemaFacturacion.Models
@using sistemaFacturacion.Services
@inject NavigationManager Nav
@inject ILotesApiClient LotesApi
@attribute [Authorize]

<h2 class="page-title fw-semibold fs-20 mb-2">Listado de Lotes</h2>
<p class="text-muted mb-3">Búsqueda, filtros y agrupación por tipo de producto.</p>

<div class="card mb-3 border-0 shadow-sm">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-4 col-12">
                <label class="form-label">Buscar</label>
                <input class="form-control"
                       placeholder="ID lote, ID producto, producto, tipo…"
                       @bind="filtroTexto" @bind:event="oninput" />
            </div>

            <div class="col-md-3 col-6">
                <label class="form-label">Estado</label>
                <select class="form-select" @bind="filtroEstado">
                    <option value="Todos">Todos</option>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
            </div>

            <div class="col-md-3 col-6">
                <label class="form-label">Rango (desde)</label>
                <InputDate class="form-control" @bind-Value="filtroDesde" />
            </div>
            <div class="col-md-3 col-6">
                <label class="form-label">Rango (hasta)</label>
                <InputDate class="form-control" @bind-Value="filtroHasta" />
            </div>

            <div class="col-md-2 d-grid col-12">
                <button class="btn btn-light" @onclick="LimpiarFiltros">
                    <i class="ri-eraser-line me-1"></i> Limpiar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header d-flex align-items-center justify-content-between bg-transparent">
        <h6 class="mb-0">Lotes por tipo de producto</h6>
        <div class="d-flex gap-2">
            <button class="btn btn-sm btn-primary" @onclick="@(() => Nav.NavigateTo("/dashboards/lotes"))">
                Crear lote (desde producto)
            </button>
        </div>
    </div>

    <div class="card-body p-0">
        @if (isLoading)
        {
            <div class="text-muted p-4">Cargando lotes...</div>
        }
        else if (errorMessage != null)
        {
            <div class="text-danger p-4">Error: @errorMessage</div>
        }
        else
        {
            <div class="px-3 pt-3">
                @if (tiposProductos.Count == 0)
                {
                    <div class="text-muted small mb-2">No hay tipos de producto registrados.</div>
                }
                else
                {
                    <nav class="nav nav-style-1 nav-pills mb-3" role="tablist">
                        @foreach (var tipo in tiposProductos)
                        {
                            var activo = string.Equals(
                            tipo, tipoSeleccionado,
                            StringComparison.OrdinalIgnoreCase);

                            <button type="button"
                                    class="nav-link @(activo ? "active" : "")"
                                    @onclick="@(() => SeleccionarTipo(tipo))">
                                @tipo
                            </button>
                        }
                    </nav>
                }
            </div>

            <div class="table-responsive">
                <table class="mb-0 table align-middle">
                    <thead class="text-muted">
                        <tr>
                            <th>ID Lote</th>
                            <th>ID Prod</th>
                            <th>Producto</th>
                            <th>Tipo</th>
                            <th>F. Compra</th>
                            <th>F. Expira</th>
                            <th>Cant. Lote</th>
                            <th>Disponible</th>
                            <th>Precio Venta</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var lista = LotesFiltrados().ToList();
                        }

                        @if (lista.Count == 0)
                        {
                            <tr>
                                <td colspan="11" class="text-muted py-4 text-center">
                                    No hay lotes para el tipo seleccionado y filtros aplicados.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var l in lista)
                            {
                                <tr>
                                    <td>@l.Id</td>
                                    <td>@l.IdPro</td>
                                    <td>@l.NombreProducto</td>
                                    <td>@l.TipoProducto</td>
                                    <td>@l.FecCom.ToString("yyyy-MM-dd")</td>
                                    <td>@l.FecExp.ToString("yyyy-MM-dd")</td>
                                    <td>@l.CanLot</td>
                                    <td>@l.CanDis</td>
                                    <td>$ @l.PreVen.ToString("0.00")</td>
                                    <td>
                                        <span class="badge @(ClaseEstado(l.EstLot))">
                                            @(l.EstLot ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary"
                                                @onclick="@(() => Nav.NavigateTo($"/dashboards/lotes/editar/{l.Id}"))"
                                                title="Editar lote">
                                            <i class="ri-edit-line"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private bool isLoading = true;
    private string? errorMessage;
    private List<LoteDto> lotes = new();

    private string filtroTexto = "";
    private string filtroEstado = "Todos";
    private DateTime? filtroDesde;
    private DateTime? filtroHasta;

    private readonly List<string> tiposProductos = new();
    private string? tipoSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            lotes = await LotesApi.GetAllAsync();

            var tipos = lotes
                .Select(x => x.TipoProducto)
                .Where(x => !string.IsNullOrWhiteSpace(x))
                .Distinct(StringComparer.OrdinalIgnoreCase)
                .OrderBy(x => x)
                .ToList();

            tiposProductos.Clear();
            tiposProductos.AddRange(tipos);

            if (tiposProductos.Count > 0)
                tipoSeleccionado = tiposProductos[0];
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<LoteDto> LotesFiltrados()
    {
        IEnumerable<LoteDto> q = lotes;

        if (!string.IsNullOrWhiteSpace(tipoSeleccionado))
            q = q.Where(x => string.Equals(
                x.TipoProducto,
                tipoSeleccionado,
                StringComparison.OrdinalIgnoreCase));

        if (!string.IsNullOrWhiteSpace(filtroTexto))
            q = q.Where(x => ($"{x.Id} {x.IdPro} {x.NombreProducto} {x.TipoProducto}")
                 .Contains(filtroTexto, StringComparison.OrdinalIgnoreCase));

        if (filtroEstado != "Todos")
            q = q.Where(x => filtroEstado == "Activo" ? x.EstLot : !x.EstLot);

        if (filtroDesde is not null)
            q = q.Where(x => x.FecCom.Date >= filtroDesde.Value.Date);

        if (filtroHasta is not null)
            q = q.Where(x => x.FecCom.Date <= filtroHasta.Value.Date);

        return q.OrderByDescending(x => x.Id);
    }

    private void SeleccionarTipo(string tipo)
    {
        tipoSeleccionado = tipo;
    }

    private void LimpiarFiltros()
    {
        filtroTexto = "";
        filtroEstado = "Todos";
        filtroDesde = filtroHasta = null;
    }

    private static string ClaseEstado(bool estLot) =>
        estLot ? "bg-success-subtle text-success"
               : "bg-danger-subtle text-danger";
}
