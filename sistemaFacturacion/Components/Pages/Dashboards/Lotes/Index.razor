@page "/dashboards/lotes"
@using Microsoft.AspNetCore.Components

<div class="lotes-dashboard">

    <div class="page-header mb-4">
        <h1 class="page-title fw-semibold fs-20">Gestión de Lotes</h1>
        <p class="text-muted fs-13">Panel general · accesos rápidos y actividad reciente</p>
    </div>

    <!-- Accesos rápidos -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-6 col-xl-4">
            <a href="/dashboards/lotes/crear" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-0 hover-scale">
                    <div class="card-body d-flex align-items-center gap-3">
                        <div class="rounded-3 p-3 bg-primary-subtle">
                            <i class="ri-add-box-line fs-3"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Crear lote</h5>
                            <small class="text-muted">Registrar un nuevo lote</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6 col-xl-4">
            <a href="/dashboards/lotes/editar" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-0 hover-scale">
                    <div class="card-body d-flex align-items-center gap-3">
                        <div class="rounded-3 p-3 bg-warning-subtle">
                            <i class="ri-edit-2-line fs-3"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Editar lote</h5>
                            <small class="text-muted">Actualizar información del lote</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6 col-xl-4">
            <a href="/dashboards/lotes/listar" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-0 hover-scale">
                    <div class="card-body d-flex align-items-center gap-3">
                        <div class="rounded-3 p-3 bg-success-subtle">
                            <i class="ri-database-2-line fs-3"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Listar lotes</h5>
                            <small class="text-muted">Consulta, filtros y exportación</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- KPIs rápidos -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Total de lotes</div>
                    <div class="fs-3 fw-semibold">128</div>
                    <div class="text-success fs-12">▲ +3.2% vs mes anterior</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Lotes activos</div>
                    <div class="fs-3 fw-semibold">97</div>
                    <div class="text-success fs-12">▲ +5 nuevos</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Lotes en revisión</div>
                    <div class="fs-3 fw-semibold text-warning">19</div>
                    <div class="text-danger fs-12">▼ -1 vs mes anterior</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted fs-12">Lotes cerrados</div>
                    <div class="fs-3 fw-semibold text-muted">12</div>
                    <div class="text-secondary fs-12">Sin variaciones</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla rápida de últimos lotes -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent">
            <h6 class="mb-0">Últimos lotes registrados</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead class="text-muted">
                        <tr>
                            <th>Código</th>
                            <th>Tipo</th>
                            <th>Fecha de creación</th>
                            <th>Responsable</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>LOT-2025-00128</td>
                            <td>Producción</td>
                            <td>2025-11-05</td>
                            <td>María Zapata</td>
                            <td><span class="badge bg-success">Activo</span></td>
                        </tr>
                        <tr>
                            <td>LOT-2025-00127</td>
                            <td>Calidad</td>
                            <td>2025-11-03</td>
                            <td>Erick Guerrón</td>
                            <td><span class="badge bg-warning text-dark">En revisión</span></td>
                        </tr>
                        <tr>
                            <td>LOT-2025-00126</td>
                            <td>Producción</td>
                            <td>2025-11-02</td>
                            <td>Xabier Pérez</td>
                            <td><span class="badge bg-secondary">Cerrado</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Acciones y notas -->
    <div class="row g-3">
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0">Acciones frecuentes</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 d-grid gap-2">
                        <li><a class="link-primary" href="/dashboards/lotes/crear">➕ Registrar lote</a></li>
                        <li><a class="link-primary" href="/dashboards/lotes/listar">📦 Consultar lotes</a></li>
                        <li><a class="link-primary" href="/dashboards/lotes/editar">✏ Actualizar datos del lote</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0">Notas</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">
                        Atributos frecuentes del lote: <strong>Código, Tipo, Fecha, Responsable, Estado</strong>.
                    </p>
                    <p class="text-muted mb-0">
                        Este dashboard usa valores estáticos de ejemplo. Próximamente se conectará con el backend para mostrar datos reales.
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>

