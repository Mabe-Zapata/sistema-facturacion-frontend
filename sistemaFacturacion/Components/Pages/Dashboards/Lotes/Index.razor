@page "/dashboards/lotes"
@using sistemaFacturacion.Models
@using sistemaFacturacion.Services
@using CurrieTechnologies.Razor.SweetAlert2
@inject NavigationManager Nav
@inject IProductosApiClient ProductosApi
@inject SweetAlertService Swal
@inject IJSRuntime JS

<div class="lotes-dashboard">

    <!-- Header + acciones -->
    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
        <div>
            <h1 class="page-title fw-semibold fs-20 mb-0">Gestión de Lotes</h1>
            <div class="text-muted fs-13">Crea lotes a partir de productos existentes</div>
        </div>

        <div class="d-flex gap-2">
        

            <button class="btn btn-primary" @onclick="@(() => Nav.NavigateTo("/dashboards/lotes/listar"))">
                <i class="ri-database-2-line me-1"></i> Listar lotes
            </button>
        </div>
    </div>

    @if (cargando)
    {
        <div class="alert alert-info">
            <span class="spinner-border spinner-border-sm me-2"></span>
            Cargando productos...
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger">
            <i class="ri-error-warning-line me-2"></i>@error
        </div>
    }
    else
    {
        <!-- Tabla de productos -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent d-flex align-items-center justify-content-between">
                <h6 class="mb-0">Productos (selecciona uno para crear un lote)</h6>
                <button class="btn btn-sm btn-light" title="Recargar" @onclick="Recargar">
                    <i class="ri-refresh-line"></i>
                </button>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table mb-0 align-middle">
                        <thead class="text-muted">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Estado</th>
                                <th scope="col" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (productos.Count == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="ri-inbox-line fs-3 mb-2 d-block"></i>No hay productos disponibles.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var p in productos)
                                {
                                    <tr @key="p.Id">
                                        <td>@p.Id</td>
                                        <td>@p.Nombre</td>
                                        <td>@p.Tipo</td>
                                        <td><small>@p.Descripcion</small></td>
                                        <td>
                                            <span class="badge @(p.Estado ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                                @(p.Estado ? "Activo" : "Inactivo")
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary"
                                                    title="Crear lote desde este producto"
                                                    @onclick="@(() => IrCrearLote(p.Id, p.Nombre))">
                                                <i class="ri-add-line"></i> Crear lote
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<ProductoDto> productos = new();
    private bool cargando = true;
    private string? error;

    protected override async Task OnInitializedAsync() => await Cargar();

    private async Task Recargar() => await Cargar(toast: true);

    private async Task Cargar(bool toast = false)
    {
        try
        {
            cargando = true;
            error = null;

            productos = await ProductosApi.GetAllAsync();

            if (toast)
            {
                var isDark = await JS.InvokeAsync<bool>("isAppInDarkMode");
                await Swal.FireAsync(new SweetAlertOptions
                {
                    Toast = true,
                    Position = SweetAlertPosition.TopEnd,
                    Icon = SweetAlertIcon.Success,
                    Title = $"✓ {productos.Count} productos cargados",
                    ShowConfirmButton = false,
                    Timer = 1400,
                    Background = isDark ? "#1e1e1e" : null,
                    Color = isDark ? "#e6e6e6" : null
                });
            }
        }
        catch (HttpRequestException ex)
        {
            error = $"Error al cargar productos: {ex.Message}";
            await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Error al cargar",
                Html = $"<small>{ex.Message}</small>",
                Icon = SweetAlertIcon.Error
            });
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void IrCrearLote(int id, string nombre)
    {
        var encoded = Uri.EscapeDataString(nombre ?? string.Empty);
        Nav.NavigateTo($"/dashboards/lotes/crear/{id}?productName={encoded}");
    }
}
